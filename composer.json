{
    "name": "avolle/cakephp-filterable",
    "description": "CakePHP Plugin to filter database fields",
    "type": "cakephp-plugin",
    "keywords": ["cakephp", "filter", "filterable", "query"],
    "license": "MIT",
    "authors": [
        {
            "name": "Alexander Volle",
            "email": "filterable@avolle.com"
        }
    ],
    "require": {
        "cakephp/cakephp": "5.x-dev"
    },
    "require-dev": {
        "phpunit/phpunit": "^9.3",
        "phpstan/phpstan": "^1.9",
        "cakephp/cakephp-codesniffer": "^5.0"
    },
    "autoload": {
        "psr-4": {
            "Avolle\\Filterable\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Avolle\\Filterable\\Test\\": "tests/"
        }
    },
    "scripts": {
        "check": [
            "@test",
            "@cs-check"
        ],
        "cs-check": "phpcs -p ./src ./tests",
        "cs-fix": "phpcbf ./src ./tests",
        "stan": "phpstan analyze",
        "test": "phpunit --colors=always"
    },
    "minimum-stability": "dev",
    "prefer-stable": true,
    "config": {
        "sort-packages": true,
        "allow-plugins": {
            "dealerdirect/phpcodesniffer-composer-installer": true
        }
    }
}
